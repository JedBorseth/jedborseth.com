---
const props = Astro.props.project;
---

<article
  id={`project-${props.id}`}
  class="text-white grid mt-5 w-full px-5 grid-rows-6"
>
  <div class="justify-self-center sm:justify-self-end md:w-1/2">
    <h2 class="border w-72 text-center h-min rounded text-3xl m-auto mb-3">
      {props.name}
    </h2><h3 class="w-auto text-center h-min rounded text-xs font-mono italic">
      <span class="not-italic text-violet-300"
        ><a href={props.location.ref} target="_blank">{props.location.name}</a>
      </span> |
      {props.techTitles}
    </h3>
  </div>
  <div
    class="flex gap-[25%] flex-wrap md:flex-nowrap row-span-2 md:row-span-1 px-[5%] justify-center"
  >
    <img
      src={props.imgPath}
      alt="Project Home Page Screenshot"
      class="h-52 w-full object-contain"
    />

    <p class="py-5">{props.introText}</p>
  </div>
  <div class="py-10">
    <h2 class="text-3xl border rounded w-72 text-center">
      {props.learned.title}
    </h2>
  </div>
</article>
