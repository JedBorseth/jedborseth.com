---
import Navbar from "../../components/Navbar";
import Footer from "../../components/Footer.astro";
import { motion } from "framer-motion";
import * as data from "../../data/projectdata.json";
import liveIcon from "../src/broadcast-pin.svg";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jed Borseth - Projects</title>
  </head>
  <body class="bg-neutral-900">
    <header><Navbar client:load /></header>
    <main class="min-h-screen text-white font-mono">
      <motion.div
        animate={{ y: 100, opacity: 1 }}
        client:load
        initial={{ y: -500, opacity: 0 }}
      >
        <div class="flex items-center h-full justify-center">
          <motion.div whileHover={{ scale: 1.15, zIndex: 20 }} client:idle
            ><a
              href={data.project1.live}
              class="relative fill-violet-600 hover:fill-gray-500 transition-colors"
              ><img src={liveIcon} alt="Live Icon" />
            </a>
            <a href={`./projects/${data.project1.slug}`}>
              <img src={data.project1.image} alt="Project Img" width="350px" />
            </a>
          </motion.div>
          <motion.div whileHover={{ scale: 1.15, zIndex: 20 }} client:idle
            ><a
              href={data.project2.live}
              class="relative fill-violet-600 hover:fill-gray-500 transition-colors"
              ><img src={liveIcon} alt="Live Icon" />
            </a>
            <a href={`./projects/${data.project2.slug}`}>
              <img src={data.project2.image} alt="Project Img" width="350px" />
            </a>
          </motion.div>
          <motion.div whileHover={{ scale: 1.15, zIndex: 20 }} client:idle
            ><a
              href={data.project3.live}
              class="relative fill-violet-600 hover:fill-gray-500 transition-colors"
              ><img src={liveIcon} alt="Live Icon" />
            </a>
            <a href="">
              <img src={data.project3.image} alt="Project Img" width="350px" />
            </a>
          </motion.div>
          <motion.div whileHover={{ scale: 1.15, zIndex: 20 }} client:idle
            ><a
              href={data.project4.live}
              class="relative fill-violet-600 hover:fill-gray-500 transition-colors"
              ><img src={liveIcon} alt="Live Icon" />
            </a>
            <a href="">
              <img src={data.project4.image} alt="Project Img" width="350px" />
            </a>
          </motion.div>
          <motion.div whileHover={{ scale: 1.15, zIndex: 20 }} client:idle
            ><a
              href={data.project5.live}
              class="relative fill-violet-600 hover:fill-gray-500 transition-colors"
              ><img src={liveIcon} alt="Live Icon" />
            </a>
            <a href="">
              <img src={data.project5.image} alt="Project Img" width="350px" />
            </a>
          </motion.div>
        </div>
      </motion.div>
    </main>
    <Footer />
  </body>
</html>
